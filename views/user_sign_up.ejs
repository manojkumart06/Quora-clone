<div id="sign-up-page">
    <h1>sign-up-page</h1>
<form action="/users/create" method="post">
    <div class="row g-3">
        <div class="col">
          <input type="text" class="form-control" placeholder="Enter Name" aria-label="First name" name="name" required>
        </div>
      </div>
      <div class="col-md-6">
        <label for="inputEmail4" class="form-label">Email</label>
        <input type="email" class="form-control" id="inputEmail4" name="email" required>
      </div>
      <div class="col-md-6">
        <label for="inputPassword4" class="form-label">Password</label>
        <input type="password" class="form-control" id="inputPassword4" name="password" required>
      </div>
      <div class="col-md-6">
        <label for="inputPassword4" class="form-label">Confirm Password</label>
        <input type="password" class="form-control" id="inputPassword4" name="confirm_password" required>
      </div>
      <button id="sign-up-btn" type="submit" value="Sign-up" class="btn btn-outline-secondary">Sign up</button>
</form>
